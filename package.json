{
  "name": "autolaunch",
  "displayName": "AutoLaunch",
  "description": "Automatically run tasks in tasks.json or launch config in launch.json",
  "version": "1.2.0",
  "keywords": [
    "auto",
    "run",
    "launch",
    "tasks",
    "debug"
  ],
  "icon": "logo/AutoLaunch128.png",
  "galleryBanner": {
    "color": "#add8e6",
    "theme": "light"
  },
  "homepage": "https://marketplace.visualstudio.com/items?itemName=philfontaine.autolaunch",
  "bugs": {
    "url": "https://github.com/philfontaine/autolaunch/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philfontaine/autolaunch.git"
  },
  "publisher": "philfontaine",
  "license": "MIT",
  "engines": {
    "vscode": "^1.17.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "/.vscode/tasks.json",
        "url": "./custom-tasks-schema.json"
      },
      {
        "fileMatch": "/.vscode/launch.json",
        "url": "./custom-launch-schema.json"
      }
    ],
    "configuration": {
			"type": "object",
			"title": "AutoLaunch",
			"properties": {
				"autolaunch.promptBeforeLaunch": {
					"scope": "workbench",
					"type": "boolean",
					"default": true,
					"description": "Whether or not to be prompted before launching the tasks. Set it to true if you want to manually confirm the tasks launch."
				}
			}
		}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.5.3",
    "vscode": "^1.1.17",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
